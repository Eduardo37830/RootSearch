      }
    },
    {
      "name": "Delete Permission (Requires permission)",
      "method": "GET",
      "url": "http://localhost:3000/auth/delete-permission",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE"
      }
    },
    {
      "name": "Admin with Permission",
      "method": "GET",
      "url": "http://localhost:3000/auth/admin-with-permission",
      "headers": {
        "Authorization": "Bearer YOUR_ADMIN_TOKEN_HERE"
